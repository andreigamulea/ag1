<div id="<%= dom_id product %>">
  <h3><%= link_to product.name, product_path(product) %></h3>

  <p>
    <strong>Pre»õ:</strong>
    <% if product.promo_active? && product.discount_price.present? && product.discount_price > 0 %>
      <span style="text-decoration: line-through; color: #999;"><%= number_to_currency(product.price) %></span>
      <span style="color: #dc3545; font-weight: bold;"><%= number_to_currency(product.discount_price) %></span>
    <% else %>
      <%= number_to_currency(product.price) %>
    <% end %>
  </p>

  <p>
    <strong>Stoc:</strong>
    <%= product.stock %> -
    <%= product.stock_status.humanize %>
  </p>

  <% if product.main_image.attached? %>
    <p>
      <%= image_tag product.main_image.variant(resize_to_limit: [150, 150]) %>
    </p>
  <% end %>
</div>
