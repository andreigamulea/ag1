<h1>Adaugă categorie nouă</h1>

<%= form_with model: @category, url: create_standalone_category_products_path, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Nume categorie" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :slug, "Slug (URL prietenos)" %>
    <%= f.text_field :slug, class: "form-control" %>
  </div>

  <%= f.submit "Salvează", class: "btn btn-primary" %>
<% end %>

<%= link_to "Înapoi", products_path, class: "btn btn-secondary mt-3" %>
