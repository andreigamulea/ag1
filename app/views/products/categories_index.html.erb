<div class="container_content category-list">
  <h1 class="admin-title">📂 Listă categorii</h1>

  <div class="category-actions">
    <%= link_to "➕ Adaugă categorie nouă", new_standalone_category_products_path, class: "form-button" %>
  </div>

  <div class="table-wrapper">
    <table class="styled-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nume</th>
          <th>Slug</th>
          <th>Acțiuni</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td><%= category.slug %></td>
            <td class="table-actions">
              <%= link_to "Vezi", show_standalone_category_products_path(id: category.id), class: "table-button neutral" %>
              <%= link_to "Editare", edit_standalone_category_products_path(id: category.id), class: "table-button primary" %>
              <%= link_to "Ștergere", delete_standalone_category_products_path(id: category.id),
                  method: :delete,
                  data: { confirm: "Ești sigur că vrei să ștergi această categorie?" },
                  class: "table-button danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "← Înapoi la produse", products_path, class: "link-button", style: "margin-top: 2rem; display: inline-block;" %>
</div>

<style>
.admin-title {
  font-size: 28px;
  color: #8b0000;
  text-align: center;
  margin-bottom: 20px;
  padding-top: 20px;
}

.category-actions {
  text-align: center;
  margin-bottom: 20px;
}

.form-button {
  background-color: #8b0000;
  color: white;
  border: none;
  padding: 10px 22px;
  font-size: 1rem;
  font-weight: bold;
  border-radius: 6px;
  cursor: pointer;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.form-button:hover {
  background-color: #fbc02d;
  color: #8b0000;
}

/* Tabel */
.styled-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 15px;
  text-align: left;
}

.styled-table thead {
  background-color: #8b0000;
  color: white;
}

.styled-table th,
.styled-table td {
  padding: 12px;
  border-bottom: 1px solid #ddd;
  vertical-align: middle;
}

.styled-table tbody tr:hover {
  background: #fef3dc;
}

.table-actions {
  white-space: nowrap;
}

/* Butoane din tabel */
.table-button {
  padding: 6px 12px;
  font-size: 0.875rem;
  font-weight: bold;
  text-decoration: none;
  border-radius: 4px;
  margin-right: 5px;
  display: inline-block;
  transition: background-color 0.2s ease-in-out;
}

.table-button.primary {
  background: #8b0000;
  color: white;
}

.table-button.danger {
  background: #bc2c2c;
  color: white;
}

.table-button.neutral {
  background-color: #f5f5f5;
  color: #8b0000;
  border: 1px solid #8b0000;
}

.table-button:hover {
  opacity: 0.9;
}

/* Link generic */
.link-button {
  background: none;
  border: none;
  color: #8b0000;
  font: inherit;
  font-weight: bold;
  text-transform: uppercase;
  cursor: pointer;
  text-decoration: none;
  position: relative;
  transition: color 0.3s ease;
}

.link-button:hover {
  color: #fbc02d;
}
</style>
