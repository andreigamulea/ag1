<% content_for :title do %>Contact | AYUS GRUP Romania<% end %>

<% content_for :meta_description do %>Contactează-ne pentru informații despre produsele Ayurveda. AYUS GRUP Romania - Str. Ostașilor nr. 15, sector 1, București. Tel: 0749 079 619.<% end %>

<% content_for :canonical do %><%= canonical_host %>/contact<% end %>

<div class="container_content">
    <div class="section-title">
      <h1>Contactează-ne</h1>
    </div>
    <div class="separator"></div>

    <div class="contact-wrapper">
      <div class="contact-info">
        <h3>Informații de contact</h3>
        <p><strong>Adresă:</strong> Str. Ostașilor nr. 15, sector 1, București, România</p>
        <p><strong>Telefon:</strong> <a href="tel:+40749079619">0749 079 619</a> (Luni-Vineri 09:00-16:00)</p>
        <p><strong>Email:</strong> <a href="mailto:contact@ayus.ro">contact@ayus.ro</a></p>
      </div>

      <div class="contact-form">
        <form action="#" method="post">
          <div class="form-group">
            <label for="contact_name">Nume</label>
            <input type="text" id="contact_name" name="name" placeholder="Numele tău" required>
          </div>

          <div class="form-group">
            <label for="contact_email">Adresă de email</label>
            <input type="email" id="contact_email" name="email" placeholder="exemplu@email.com" required>
          </div>

          <div class="form-group">
            <label for="contact_message">Mesaj</label>
            <textarea id="contact_message" name="message" placeholder="Scrie mesajul tău aici..." rows="5" required></textarea>
          </div>

          <button type="submit" class="form-button">Trimite mesajul</button>
        </form>
      </div>
    </div>
  </div>
