<div style="max-width: 600px; margin: 40px auto; padding: 0 20px;">
  <h1 style="color: #8b0000; margin-bottom: 30px;">✏️ Editare Abonat Newsletter</h1>

  <%= form_with(model: @newsletter, url: update_newsletter_path(@newsletter), method: :patch, local: true) do |form| %>
    <% if @newsletter.errors.any? %>
      <div style="background: #f8d7da; color: #721c24; padding: 15px; border-radius: 6px; margin-bottom: 20px; border: 1px solid #f5c6cb;">
        <h3 style="margin-top: 0;">Erori la validare:</h3>
        <ul style="margin-bottom: 0;">
          <% @newsletter.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="background: white; padding: 30px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
      <div style="margin-bottom: 20px;">
        <%= form.label :nume, "Nume:", style: "display: block; font-weight: 600; margin-bottom: 8px; color: #333;" %>
        <%= form.text_field :nume, 
            required: true,
            style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 15px; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <%= form.label :email, "Email:", style: "display: block; font-weight: 600; margin-bottom: 8px; color: #333;" %>
        <%= form.email_field :email, 
            required: true,
            style: "width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 6px; font-size: 15px; box-sizing: border-box;" %>
      </div>

      <div style="margin-bottom: 25px;">
        <%= form.label :validat, style: "display: inline-flex; align-items: center; font-weight: 600; color: #333; cursor: pointer;" do %>
          <%= form.check_box :validat, style: "width: 20px; height: 20px; margin-right: 10px; cursor: pointer;" %>
          <span>Abonat validat</span>
        <% end %>
      </div>

      <div style="display: flex; gap: 10px; justify-content: flex-end;">
        <%= link_to "Anulează", lista_newsletter_path, 
            style: "display: inline-block; padding: 12px 25px; background: #6c757d; color: white; text-decoration: none; border-radius: 6px; font-weight: 600;" %>
        <%= form.submit "💾 Salvează modificările", 
            style: "padding: 12px 25px; background: #8b0000; color: white; border: none; border-radius: 6px; cursor: pointer; font-weight: 600; font-size: 15px;" %>
      </div>
    </div>
  <% end %>

  <div style="margin-top: 20px; padding: 15px; background: #f8f9fa; border-radius: 6px; border-left: 4px solid #17a2b8;">
    <p style="margin: 0; color: #666; font-size: 14px;">
      <strong>📅 Data înregistrării:</strong> <%= @newsletter.created_at.strftime('%d.%m.%Y, %H:%M') %><br>
      <strong>🔄 Ultima actualizare:</strong> <%= @newsletter.updated_at.strftime('%d.%m.%Y, %H:%M') %>
    </p>
  </div>
</div>