<h1 style="text-align: center;">Cărți în format fizic și digital</h1>

<div class="product-grid">
  <% @products.each do |product| %>
  <div class="product-card"> <!-- AICI trebuie învelit tot -->
    <div class="image-wrapper">
      <% if product.external_image_url.present? %>
        <%= link_to carti_path(product.id), class: "image-link" do %>
          <%= image_tag product.external_image_url, alt: product.name, class: "popup-trigger" %>
        <% end %>
      <% else %>
        <%= image_tag "placeholder.png", class: "product-image", loading: "lazy" %>
      <% end %>
    </div>

    <p class="product-title"><%= product.name %></p>

    <% if product.custom_attributes["autor"].present? %>
      <p class="product-author">autor: <%= product.custom_attributes["autor"] %></p>
    <% end %>

    <p class="product-price">Preț: <%= number_to_currency(product.price, unit: "lei") %></p>

    <% if product.track_inventory %>
  <% if product.stock > 5 %>
    <p class="stock green">Stoc: <%= product.stock %> Pe stoc</p>
  <% elsif product.stock > 0 %>
    <p class="stock yellow">Stoc: <%= product.stock %> Cantitate limitată</p>
  <% else %>
    <p class="stock red">Stoc: 0 (Se poate comanda, livrarea va fi făcută când revine în stoc)</p>
  <% end %>
<% else %>
  <% if product.stock > 0 %>
    <p class="stock green">Stoc disponibil: <%= product.stock %></p>
  <% else %>
    <p class="stock red">Stoc: 0 (indisponibil)</p>
  <% end %>
<% end %>


    <div class="add-to-cart-form">
  <%= form_with url: add_cart_index_path, method: :post, local: true do %>
    <%= hidden_field_tag :product_id, product.id %>
    <%= number_field_tag :quantity, 1, 
      class: "qty-input", 
      min: 1, 
      max: (product.track_inventory ? nil : product.stock) %>

    <%= submit_tag "Adaugă în coș", 
      class: "add-to-cart-btn", 
      disabled: (!product.track_inventory && product.stock <= 0) %>

  <% end %>
</div>

  </div> <!-- final div.product-card -->
<% end %>
</div> 

<%= paginate @products %>

<style>
.product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
  justify-content: center;
  padding: 20px;
}

.product-card {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
  width: 100%;
  max-width: 260px;
  padding: 10px;
  margin: 10px;
  border: 1px solid #b51e1e;
  border-radius: 8px;
  background-color: #fff;
  text-align: center;
  box-sizing: border-box;
}

.image-wrapper {
  height: 220px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
}

.product-image, .popup-trigger {
  max-height: 200px;
  max-width: 100%;
  object-fit: contain;
}


.product-title {
  font-size: 1.1em;
  font-weight: bold;
  margin-bottom: 5px;
}

.product-author {
  font-style: italic;
  font-size: 0.9em;
  margin-bottom: 5px;
}

.product-price {
  font-weight: bold;
  color: #b51e1e;
  margin-bottom: 5px;
}

.stock {
  font-size: 0.9em;
  margin-bottom: 10px;
}

.stock.green {
  color: green;
}

.stock.yellow {
  color: #d19c00;
}

.stock.red {
  color: #b51e1e;
}

.add-to-cart-form {
  margin-top: auto; 
  display: flex;
  justify-content: center;
  gap: 5px;
  align-items: center;
}

.qty-input {
  width: 40px;
  padding: 2px;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.add-to-cart-btn {
  background-color: #b51e1e;
  color: white;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
  font-weight: bold;
  cursor: pointer;
}

.add-to-cart-btn:disabled {
  background-color: #ccc;
  cursor: not-allowed;
}


@media (max-width: 768px) {
  .product-grid {
    gap: 15px;
    padding: 10px;
  }

  .product-card {
    max-width: 100%;
    padding: 8px;
  }

  .product-title {
    font-size: 1em;
  }

  .product-author,
  .product-price,
  .stock {
    font-size: 0.85em;
  }

  .product-image {
    max-height: 200px;
  }

  .add-to-cart-form {
    flex-direction: column;
    gap: 5px;
  }

  .qty-input {
    width: 60px;
  }
}
</style>

