<h1 style="text-align: center;">Cărți în format fizic și digital</h1>

<div class="product-grid">
<% @products.each do |product| %>
  <div class="product-card">
    <% if product.main_image.attached? && product.main_image.blob.persisted? %>
      <% begin %>
        <%= link_to carti_path(product.id), class: "image-link" do %>
          <%= image_tag bunny_storage_url(product.main_image.variant(resize_to_limit: [300, 300])), alt: product.name, class: "popup-trigger", data: { full: bunny_storage_url(product.main_image) }, loading: "lazy" %>
        <% end %>
      <% rescue ActiveStorage::FileNotFoundError, ActiveStorage::InvariableError => e %>
        <%= image_tag "placeholder.png", class: "product-image", loading: "lazy" %>
        <% Rails.logger.error "Failed to load main image variant for product #{product.id}: #{e.message}" %>
      <% end %>
    <% else %>
      <%= image_tag "placeholder.png", class: "product-image", loading: "lazy" %>
    <% end %>
    <p><%= product.name %></p>
    <p>Price: <%= product.price %></p>
    <p><%= product.track_inventory ? "Inventory tracked" : "Inventory not tracked" %></p>
  </div>
<% end %>
<%= paginate @products %>


<style>
.product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
  justify-content: center;
  padding: 20px;
}


.product-card {
  width: 100%;
  max-width: 300px;
  margin: 10px;
  overflow: hidden;
}

.popup-trigger {
  width: 100%;
  height: auto;
  object-fit: contain; 
  max-height: 300px;
  border-radius: 4px;
}



.product-image {
  width: 100%;
  height: auto;
  object-fit: contain;
  max-height: 300px;
  border-radius: 4px;
}

.product-title {
  font-size: 1.1em;
  font-weight: bold;
  margin-bottom: 5px;
}

.product-author {
  font-style: italic;
  font-size: 0.9em;
  margin-bottom: 5px;
}

.product-price {
  font-weight: bold;
  color: #b51e1e;
  margin-bottom: 5px;
}

.stock {
  font-size: 0.9em;
  margin-bottom: 10px;
}

.stock.green {
  color: green;
}

.stock.yellow {
  color: #d19c00;
}

.stock.red {
  color: #b51e1e;
}

.add-to-cart-form {
  display: flex;
  justify-content: center;
  gap: 5px;
  align-items: center;
}

.qty-input {
  width: 40px;
  padding: 2px;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.add-to-cart-btn {
  background-color: #b51e1e;
  color: white;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
  font-weight: bold;
  cursor: pointer;
}

.add-to-cart-btn:disabled {
  background-color: #ccc;
  cursor: not-allowed;
}
</style>