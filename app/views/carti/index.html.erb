<h1 style="text-align: center;">Cărți în format fizic și digital</h1>

<div class="product-grid">
  <% @products.each do |product| %>
    <div class="product-card">
      <% if product.main_image.attached? %>
        <% begin %>
          <%= link_to carti_path(product.id), class: "image-link" do %>
<%= image_tag bunny_storage_url(product.main_image.variant(resize_to_limit: [200, 200])), alt: product.name, class: "popup-trigger", data: { full: bunny_storage_url(product.main_image) } %>          <% end %>
        <% rescue ActiveStorage::FileNotFoundError, ActiveStorage::InvariableError => e %>
          <%= image_tag "placeholder.png", class: "product-image", loading: "lazy" %>
          <% Rails.logger.error "Eroare la încărcarea imaginii principale pentru produsul #{product.id}: #{e.message}" %>
        <% end %>
      <% else %>
        <%= image_tag "placeholder.png", class: "product-image", loading: "lazy" %>
      <% end %>

      <h2 class="product-title"><%= product.name %></h2>

      <% if product.custom_attributes && product.custom_attributes["autor"] %>
        <p class="product-author">autor: <%= product.custom_attributes["autor"] %></p>
      <% end %>

      <p class="product-price">Preț: <%= number_to_currency(product.price, unit: "lei", separator: ",", delimiter: ".") %></p>

      <p class="stock <%= product.track_inventory ? 'green' : 'red' %>">
        <%= product.track_inventory ? "Stocul este urmărit" : "Stocul nu este urmărit" %>
      </p>

      <form class="add-to-cart-form">
        <input type="number" value="1" min="1" class="qty-input" />
        <button type="submit" class="add-to-cart-btn" <%= 'disabled' if product.stock.to_i == 0 && product.stock_status != "in_stock" %>>
          Adaugă în coș
        </button>
      </form>
    </div>
  <% end %>
</div>

<%= paginate @products %>


<style>
.product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
  justify-content: center;
  padding: 20px;
}


.product-card {
  width: 100%;
  max-width: 300px;
  margin: 10px;
  overflow: hidden;
}

.popup-trigger {
  width: 100%;
  height: auto;
  object-fit: contain; 
  max-height: 300px;
  border-radius: 4px;
}



.product-image {
  width: 100%;
  height: auto;
  object-fit: contain;
  max-height: 300px;
  border-radius: 4px;
}

.product-title {
  font-size: 1.1em;
  font-weight: bold;
  margin-bottom: 5px;
}

.product-author {
  font-style: italic;
  font-size: 0.9em;
  margin-bottom: 5px;
}

.product-price {
  font-weight: bold;
  color: #b51e1e;
  margin-bottom: 5px;
}

.stock {
  font-size: 0.9em;
  margin-bottom: 10px;
}

.stock.green {
  color: green;
}

.stock.yellow {
  color: #d19c00;
}

.stock.red {
  color: #b51e1e;
}

.add-to-cart-form {
  display: flex;
  justify-content: center;
  gap: 5px;
  align-items: center;
}

.qty-input {
  width: 40px;
  padding: 2px;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.add-to-cart-btn {
  background-color: #b51e1e;
  color: white;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
  font-weight: bold;
  cursor: pointer;
}

.add-to-cart-btn:disabled {
  background-color: #ccc;
  cursor: not-allowed;
}
</style>