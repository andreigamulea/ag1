<h1 style="text-align: center;">Cărți în format fizic și digital</h1>

<div class="product-grid">
  <% @products.each do |product| %>
    <div class="product-card">
      <% if product.external_image_url.present? %>
        <%= link_to carti_path(product.id), class: "image-link" do %>
          <%= image_tag product.external_image_url, alt: product.name, class: "product-image popup-trigger" %>
        <% end %>
      <% else %>
        <%= image_tag "placeholder.png", class: "product-image", loading: "lazy" %>
      <% end %>

      <p class="product-title"><%= product.name %></p>

      <% if product.custom_attributes["autor"].present? %>
        <p class="product-author">autor: <%= product.custom_attributes["autor"] %></p>
      <% end %>

      <p class="product-price">Preț: <%= number_to_currency(product.price, unit: "lei") %></p>

      <% if product.track_inventory %>
        <% if product.stock > 5 %>
          <p class="stock green">Stoc: <%= product.stock %> Pe stoc</p>
        <% elsif product.stock > 0 %>
          <p class="stock yellow">Stoc: <%= product.stock %> Permite comenzi în așteptare</p>
        <% else %>
          <p class="stock red">Stoc: 0 Nu mai este pe stoc</p>
        <% end %>
      <% else %>
        <p class="stock">Stoc: Netransmis</p>
      <% end %>

      <div class="add-to-cart-form">
        <%= number_field_tag "quantity", 1, class: "qty-input", min: 1 %>
        <%= button_tag "Adaugă în coș", class: "add-to-cart-btn", disabled: product.stock <= 0 && product.track_inventory %>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @products %>

<style>
.product-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
  justify-content: center;
  padding: 20px;
}

.product-card {
  width: 100%;
  max-width: 260px;
  margin: 10px;
  padding: 10px;
  overflow: hidden;
  border: 1px solid #b51e1e;
  border-radius: 8px;
  background-color: #fff;
  text-align: center;
}

.product-image {
  width: 100%;
  max-height: 280px;
  object-fit: contain;
  margin-bottom: 10px;
}

.product-title {
  font-size: 1.1em;
  font-weight: bold;
  margin-bottom: 5px;
}

.product-author {
  font-style: italic;
  font-size: 0.9em;
  margin-bottom: 5px;
}

.product-price {
  font-weight: bold;
  color: #b51e1e;
  margin-bottom: 5px;
}

.stock {
  font-size: 0.9em;
  margin-bottom: 10px;
}

.stock.green {
  color: green;
}

.stock.yellow {
  color: #d19c00;
}

.stock.red {
  color: #b51e1e;
}

.add-to-cart-form {
  display: flex;
  justify-content: center;
  gap: 5px;
  align-items: center;
}

.qty-input {
  width: 40px;
  padding: 2px;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.add-to-cart-btn {
  background-color: #b51e1e;
  color: white;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
  font-weight: bold;
  cursor: pointer;
}

.add-to-cart-btn:disabled {
  background-color: #ccc;
  cursor: not-allowed;
}
</style>
