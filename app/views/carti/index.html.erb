<h1 style="text-align: center; margin-top:30px;">Cărți în format fizic și digital</h1>

<div class="product-grid">
  <% @products.each do |product| %>
    <div class="product-card">
      <div class="image-wrapper">
        <% if product.external_image_url.present? %>
          <%= link_to carti_path(product.id), class: "image-link" do %>
            <%= image_tag product.external_image_url, alt: product.name, class: "popup-trigger" %>
          <% end %>
        <% else %>
          <%= image_tag "placeholder.png", class: "product-image", loading: "lazy" %>
        <% end %>
      </div>

      <div class="content-section">
        <p class="product-title"><%= product.name %></p>

        <% if product.custom_attributes["autor"].present? %>
          <p class="product-author">autor: <%= product.custom_attributes["autor"] %></p>
        <% end %>

        <p class="product-price">Preț: <%= number_to_currency(product.price, unit: "lei") %></p>
            
        <% if product.track_inventory %>
  <% if current_user && current_user.role == 1 %>
    <% if product.stock > 5 %>
      <p class="stock green">Stoc: <%= product.stock %> Pe stoc</p>
    <% elsif product.stock > 0 %>
      <p class="stock yellow">Stoc: <%= product.stock %> Cantitate limitată</p>
    <% else %>
      <p class="stock red">Stoc: 0 (Se poate comanda, livrarea va fi făcută când revine în stoc)</p>
    <% end %>
  <% else %>
    <% if product.stock > 0 %>
      <p class="stock green">Disponibil</p>
    <% else %>
      <p class="stock red">Indisponibil temporar</p>
    <% end %>
  <% end %>
<% else %>
  <% if current_user && current_user.role == 1 %>
    <% if product.stock > 0 %>
      <p class="stock green">Stoc disponibil: <%= product.stock %></p>
    <% else %>
      <p class="stock red">Stoc: 0 (indisponibil)</p>
    <% end %>
  <% else %>
    <% if product.stock > 0 %>
      <p class="stock green">Disponibil</p>
    <% else %>
      <p class="stock red">Indisponibil temporar</p>
    <% end %>
  <% end %>
<% end %>

      </div>

      <div class="add-to-cart-form">
        <%= form_with url: add_cart_index_path, method: :post, local: true do %>
          <%= hidden_field_tag :product_id, product.id %>
          <%= number_field_tag :quantity, 1, 
            class: "qty-input", 
            min: 1, 
            max: (product.track_inventory ? nil : product.stock) %>

          <%= submit_tag "Adaugă în coș", 
            class: "add-to-cart-btn", 
            disabled: (!product.track_inventory && product.stock <= 0) %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @products %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Funcție pentru a egaliza înălțimea cardurilor
  function equalizeCardHeights() {
    const cards = document.querySelectorAll('.product-card');
    if (cards.length === 0) return;
    
    // Resetăm înălțimile
    cards.forEach(card => {
      card.style.height = 'auto';
      card.style.minHeight = '0';
    });
    
    // Găsim cea mai mare înălțime
    let maxHeight = 0;
    cards.forEach(card => {
      const cardHeight = card.offsetHeight;
      if (cardHeight > maxHeight) {
        maxHeight = cardHeight;
      }
    });
    
    // Setăm aceeași înălțime pentru toate cardurile
    cards.forEach(card => {
      card.style.height = maxHeight + 'px';
      card.style.minHeight = maxHeight + 'px';
    });
  }
  
  // Executăm la încărcarea paginii
  equalizeCardHeights();
  
  // Executăm la redimensionarea ferestrei
  let resizeTimeout;
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(equalizeCardHeights, 250);
  });
  
  // Executăm din nou după încărcarea imaginilor (pentru imagini lazy-loaded)
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', equalizeCardHeights);
  }
  
  // Pentru paginare - re-egalizăm când se schimbă pagina
  const observer = new MutationObserver(function(mutations) {
    mutations.forEach(function(mutation) {
      if (mutation.type === 'childList' && mutation.addedNodes.length > 0) {
        // Verificăm dacă s-au adăugat noi carduri
        setTimeout(equalizeCardHeights, 100);
      }
    });
  });
  
  observer.observe(document.querySelector('.product-grid'), {
    childList: true,
    subtree: true
  });
});
</script>

