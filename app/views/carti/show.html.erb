<script>
document.addEventListener('turbo:load', initializeBindings);
document.addEventListener('DOMContentLoaded', initializeBindings);

function initializeBindings() {
  bindLightbox();
  bindQuantityControls();
  bindThumbnailClick();
  console.log('Initialize bindings executed');
}

function bindLightbox() {
  const overlay = document.getElementById('lightbox-overlay');
  const lightboxImage = document.getElementById('lightbox-image');
  const closeBtn = document.getElementById('lightbox-close');

  if (!overlay || !lightboxImage || !closeBtn) {
    console.warn('Lightbox elements not fully found, skipping binding');
    return;
  }

  const newOverlay = overlay.cloneNode(true);
  overlay.parentNode.replaceChild(newOverlay, overlay);
  const newCloseBtn = newOverlay.querySelector('#lightbox-close');
  const newLightboxImage = newOverlay.querySelector('#lightbox-image');

  // Lightbox pe click la imaginea principală
  document.addEventListener('click', (e) => {
    if (e.target.classList.contains('main-image')) {
      const fullUrl = e.target.dataset.full || e.target.src;
      newLightboxImage.src = fullUrl;
      newOverlay.style.display = 'flex';
      console.log('Lightbox opened with:', fullUrl);
    }
  });

  function closeLightbox() {
    newOverlay.style.display = 'none';
    newLightboxImage.src = '';
  }

  newCloseBtn.addEventListener('click', closeLightbox);
  newOverlay.addEventListener('click', e => {
    if (e.target === newOverlay || e.target === newCloseBtn) {
      closeLightbox();
    }
  });
}

function bindThumbnailClick() {
  const mainImage = document.querySelector('.main-image');
  const imageContainer = document.querySelector('.image-container');
  const thumbs = document.querySelectorAll('.thumb');
  
  if (!mainImage) {
    console.error('Main image not found');
    return;
  }
  if (!thumbs || thumbs.length === 0) {
    console.warn('No thumbnails found');
    return;
  }

  console.log(`Found ${thumbs.length} thumbnails (including main image)`);

  // Marchează primul thumbnail (imaginea principală) ca activ
  if (thumbs.length > 0) {
    thumbs[0].classList.add('active');
  }

  // ZOOM cu urmărire mouse
  if (imageContainer) {
    imageContainer.addEventListener('mousemove', (e) => {
      const rect = imageContainer.getBoundingClientRect();
      const x = ((e.clientX - rect.left) / rect.width) * 100;
      const y = ((e.clientY - rect.top) / rect.height) * 100;
      
      mainImage.style.transformOrigin = `${x}% ${y}%`;
    });

    imageContainer.addEventListener('mouseleave', () => {
      mainImage.style.transformOrigin = 'center center';
    });
  }

  thumbs.forEach((thumb, index) => {
    // CLICK pentru a schimba imaginea permanent
    thumb.addEventListener('click', (e) => {
      e.preventDefault();
      const fullResUrl = thumb.dataset.full;
      
      console.log(`[Thumb ${index}] CLICKED - Switching to:`, fullResUrl);
      
      if (fullResUrl) {
        // Îndepărtăm clasa active de la toate thumbnailurile
        thumbs.forEach(t => t.classList.remove('active'));
        // Adăugăm clasa active la thumbnailul curent
        thumb.classList.add('active');
        
        // Schimbăm imaginea principală
        mainImage.style.opacity = '0.5';
        
        const newImage = new Image();
        newImage.onload = () => {
          mainImage.src = fullResUrl;
          mainImage.dataset.full = fullResUrl;
          mainImage.style.opacity = '1';
          console.log(`[Thumb ${index}] ✓ Image switched successfully`);
        };
        newImage.onerror = () => {
          console.error(`[Thumb ${index}] ✗ Failed to load image:`, fullResUrl);
          mainImage.style.opacity = '1';
        };
        newImage.src = fullResUrl;
      }
    });
  });
}

function bindQuantityControls() {
  const input = document.getElementById('quantity_input');
  const decreaseBtn = document.querySelector('.quantity-decrease');
  const increaseBtn = document.querySelector('.quantity-increase');

  if (!input || !decreaseBtn || !increaseBtn) {
    console.warn('Quantity controls not found');
    return;
  }

  function adjustQty(delta) {
    let value = parseInt(input.value, 10) || 1;
    value = Math.max(1, value + delta);
    input.value = value;
  }

  decreaseBtn.addEventListener('click', () => adjustQty(-1));
  increaseBtn.addEventListener('click', () => adjustQty(1));
}

// Variant selector logic (swatches primary + buttons secondary)
function bindVariantSelector() {
  var dataEl = document.getElementById('variants-data');
  if (!dataEl) return;

  var variants = JSON.parse(dataEl.textContent);
  var swatches = document.querySelectorAll('.variant-swatch');
  var priceEl = document.getElementById('variant-price');
  var hiddenInput = document.getElementById('selected-variant-id');
  var submitBtn = document.getElementById('add-to-cart-submit');
  var stockTextEl = document.getElementById('variant-stock-text');
  var primarySwatchesEl = document.getElementById('primary-swatches');

  // Fallback: if no swatches (backward compat for products without primary set)
  if (!swatches.length) return;

  var selectedPrimaryValueId = null;
  var selectedSecondaryValues = {};

  function getVariantsForPrimary(primaryValueId) {
    return variants.filter(function(v) {
      return v.option_value_ids.includes(primaryValueId);
    });
  }

  function findExactVariant() {
    if (!selectedPrimaryValueId) return null;
    var allSelected = [selectedPrimaryValueId];
    var secValues = Object.values(selectedSecondaryValues).filter(Boolean);
    allSelected = allSelected.concat(secValues);
    return variants.find(function(v) {
      return allSelected.every(function(id) { return v.option_value_ids.includes(id); }) &&
             v.option_value_ids.length === allSelected.length;
    });
  }

  function updateSecondaryButtons() {
    if (!selectedPrimaryValueId) return;
    var availableVariants = getVariantsForPrimary(selectedPrimaryValueId);

    document.querySelectorAll('.variant-buttons').forEach(function(container) {
      container.querySelectorAll('.variant-btn').forEach(function(btn) {
        var valueId = parseInt(btn.dataset.optionValueId);
        var exists = availableVariants.some(function(v) {
          return v.option_value_ids.includes(valueId);
        });
        var hasStock = availableVariants.some(function(v) {
          return v.option_value_ids.includes(valueId) && v.stock > 0;
        });

        btn.classList.toggle('variant-btn--disabled', !exists);
        btn.classList.toggle('variant-btn--out-of-stock', exists && !hasStock);
        btn.disabled = !exists;
      });
    });
  }

  function autoSelectSecondary() {
    if (!selectedPrimaryValueId) return;
    var availableVariants = getVariantsForPrimary(selectedPrimaryValueId);

    document.querySelectorAll('.variant-buttons').forEach(function(container) {
      var typeId = container.dataset.optionTypeId;
      var currentSelection = selectedSecondaryValues[typeId];

      if (currentSelection) {
        var stillAvailable = availableVariants.some(function(v) {
          return v.option_value_ids.includes(currentSelection);
        });
        if (stillAvailable) return;
      }

      var firstAvailable = container.querySelector('.variant-btn:not(.variant-btn--disabled)');
      if (firstAvailable) {
        selectedSecondaryValues[typeId] = parseInt(firstAvailable.dataset.optionValueId);
        container.querySelectorAll('.variant-btn').forEach(function(b) { applyBtnActive(b, false); });
        applyBtnActive(firstAvailable, true);
      }
    });
  }

  function updateVariantImages(variant) {
    var mainImage = document.querySelector('.main-image');
    var thumbnailsContainer = document.querySelector('.product-thumbnails');
    if (!mainImage) return;

    var mainImgUrl = variant.external_image_url;
    var galleryUrls = variant.external_image_urls || [];

    if (mainImgUrl) {
      var displayUrl = mainImgUrl + '?width=600&height=600&quality=85';
      var fullUrl = mainImgUrl + '?width=2000&height=2000&quality=95';

      mainImage.style.opacity = '0.5';
      var newImage = new Image();
      newImage.onload = function() {
        mainImage.src = displayUrl;
        mainImage.dataset.full = fullUrl;
        mainImage.style.opacity = '1';
      };
      newImage.src = displayUrl;

      if (thumbnailsContainer) {
        thumbnailsContainer.innerHTML = '';
        var mainThumb = document.createElement('img');
        mainThumb.className = 'thumb main-thumb active';
        mainThumb.src = mainImgUrl + '?width=600&height=600&quality=95';
        mainThumb.dataset.full = fullUrl;
        mainThumb.alt = 'Imagine principală';
        thumbnailsContainer.appendChild(mainThumb);

        galleryUrls.forEach(function(url, index) {
          var thumb = document.createElement('img');
          thumb.className = 'thumb';
          thumb.src = url + '?width=600&height=600&quality=95';
          thumb.dataset.full = url + '?width=2000&height=2000&quality=95';
          thumb.alt = 'Imagine ' + (index + 2);
          thumbnailsContainer.appendChild(thumb);
        });
        bindThumbnailClick();
      }
    }
  }

  function updateDisplay() {
    var match = findExactVariant();

    if (match) {
      hiddenInput.value = match.id;
      if (match.promo_active && match.discount_price > 0) {
        priceEl.innerHTML = '<span style="text-decoration:line-through;color:#999;">' +
          match.price.toFixed(2) + ' lei</span> <span style="color:#dc3545;font-weight:bold;">' +
          match.effective_price.toFixed(2) + ' lei</span>';
      } else {
        priceEl.textContent = match.price.toFixed(2) + ' lei';
      }
      if (stockTextEl) {
        if (match.stock > 0) {
          stockTextEl.textContent = match.stock + ' bucăți disponibile';
          stockTextEl.style.color = '#28a745';
        } else {
          stockTextEl.textContent = 'Stoc epuizat';
          stockTextEl.style.color = '#dc3545';
        }
      }
      submitBtn.disabled = match.stock <= 0;
      submitBtn.title = match.stock <= 0 ? 'Produsul nu este în stoc' : '';
      if (match.external_image_url || (match.external_image_urls && match.external_image_urls.length > 0)) {
        updateVariantImages(match);
      }
    } else {
      hiddenInput.value = '';
      submitBtn.disabled = true;
      submitBtn.title = 'Selectează toate opțiunile';
      if (stockTextEl) {
        stockTextEl.textContent = 'Selectează opțiunile';
        stockTextEl.style.color = '#666';
      }
    }
  }

  // === VISUAL STATE HELPERS ===

  function applySwatchActive(swatch, active) {
    swatch.classList.toggle('variant-swatch--active', active);
    var colorEl = swatch.querySelector('.swatch-color');
    var labelEl = swatch.querySelector('.swatch-label');
    if (colorEl) {
      colorEl.style.boxShadow = active ? '0 0 0 2px #fff, 0 0 0 4px #8b0000' : 'none';
    }
    if (labelEl) {
      labelEl.style.boxShadow = active ? '0 0 0 2px #fff, 0 0 0 4px #8b0000' : 'none';
    }
  }

  function applyBtnActive(btn, active) {
    btn.classList.toggle('variant-btn--active', active);
    if (active) {
      btn.style.backgroundColor = '#8b0000';
      btn.style.borderColor = '#8b0000';
      btn.style.color = '#fff';
      btn.style.fontWeight = '600';
    } else {
      btn.style.backgroundColor = '';
      btn.style.borderColor = '';
      btn.style.color = '';
      btn.style.fontWeight = '';
    }
  }

  // === EVENT LISTENERS ===

  swatches.forEach(function(swatch) {
    swatch.addEventListener('click', function() {
      selectedPrimaryValueId = parseInt(this.dataset.optionValueId);
      swatches.forEach(function(s) { applySwatchActive(s, false); });
      applySwatchActive(this, true);
      updateSecondaryButtons();
      autoSelectSecondary();
      updateDisplay();
    });
  });

  document.querySelectorAll('.variant-btn').forEach(function(btn) {
    btn.addEventListener('click', function() {
      if (this.disabled) return;
      var typeId = this.closest('.variant-buttons').dataset.optionTypeId;
      selectedSecondaryValues[typeId] = parseInt(this.dataset.optionValueId);
      this.closest('.variant-buttons').querySelectorAll('.variant-btn').forEach(function(b) {
        applyBtnActive(b, false);
      });
      applyBtnActive(this, true);
      updateDisplay();
    });
  });

  // === INITIALIZATION ===
  var initialVariantId = hiddenInput ? parseInt(hiddenInput.value) : null;
  var initialVariant = initialVariantId ? variants.find(function(v) { return v.id === initialVariantId; }) : variants[0];

  if (initialVariant) {
    swatches.forEach(function(swatch) {
      var valueId = parseInt(swatch.dataset.optionValueId);
      if (initialVariant.option_value_ids.includes(valueId)) {
        selectedPrimaryValueId = valueId;
        applySwatchActive(swatch, true);
      } else {
        applySwatchActive(swatch, false);
      }
    });

    document.querySelectorAll('.variant-buttons').forEach(function(container) {
      var typeId = container.dataset.optionTypeId;
      container.querySelectorAll('.variant-btn').forEach(function(btn) {
        var valueId = parseInt(btn.dataset.optionValueId);
        if (initialVariant.option_value_ids.includes(valueId)) {
          selectedSecondaryValues[typeId] = valueId;
          applyBtnActive(btn, true);
        }
      });
    });

    updateSecondaryButtons();
    updateDisplay();
  }
}

document.addEventListener('DOMContentLoaded', bindVariantSelector);
document.addEventListener('turbo:load', bindVariantSelector);
</script>
