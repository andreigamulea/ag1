<% content_for :title do %><%= @product.meta_title.presence || @product.name %> | AYUS GRUP<% end %>

<% content_for :meta_description do %><%= @product.meta_description.presence || truncate(strip_tags(@product.description.to_s), length: 160) %><% end %>

<% content_for :canonical do %><%= canonical_host %><%= carti_path(@product) %><% end %>

<% content_for :og_type do %>product<% end %>

<% if @product.external_image_url.present? %>
<% content_for :og_image do %><%= @product.external_image_url %><% end %>
<% end %>

<!-- Schema.org JSON-LD BreadcrumbList -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Acasa",
      "item": "<%= canonical_host %>"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Carti",
      "item": "<%= canonical_host %><%= carti_index_path %>"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": <%= @product.name.to_json.html_safe %>,
      "item": "<%= canonical_host %><%= carti_path(@product) %>"
    }
  ]
}
</script>

<!-- Schema.org JSON-LD pentru Product -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Product",
  "name": <%= @product.name.to_json.html_safe %>,
  "description": <%= truncate(strip_tags(@product.description.to_s), length: 500).to_json.html_safe %>,
  <% if @product.external_image_url.present? %>
  "image": "<%= @product.external_image_url %>",
  <% end %>
  "offers": {
    "@type": "Offer",
    "url": "<%= canonical_host %><%= carti_path(@product) %>",
    "priceCurrency": "RON",
    "price": "<%= @product.price %>",
    "availability": "<%= @product.stock.to_i > 0 ? 'https://schema.org/InStock' : 'https://schema.org/OutOfStock' %>",
    "seller": {
      "@type": "Organization",
      "name": "AYUS GRUP Romania"
    }
  },
  "brand": {
    "@type": "Brand",
    "name": "AYUS GRUP"
  }
}
</script>

<div class="container_content product-view">
  <div class="section-title">
    <h1><%= @product.name %></h1>
    <div class="separator"></div>
  </div>



  <div class="product-grid <%= 'no-thumbnails' unless @product.external_image_urls.present? && @product.external_image_urls.any? %>">
    <!-- Column 1: Thumbnails (includem și imaginea principală) -->
    <% if @product.external_image_urls.present? && @product.external_image_urls.any? %>
      <div class="product-thumbnails">
        <!-- ADĂUGĂM IMAGINEA PRINCIPALĂ ÎN THUMBNAILS -->
        <% if @product.external_image_url.present? %>
          <% main_thumb_url = "#{@product.external_image_url}?width=600&height=600&quality=95" %>
          <% main_full_url = "#{@product.external_image_url}?width=2000&height=2000&quality=95" %>
          <%= image_tag main_thumb_url, class: "thumb main-thumb", data: { full: main_full_url }, alt: @product.name %>
        <% end %>
        
        <!-- THUMBNAILS SECUNDARE -->
        <% @product.external_image_urls.each do |url| %>
          <% thumb_url = "#{url}?width=600&height=600&quality=95" %>
          <% full_url  = "#{url}?width=2000&height=2000&quality=95" %>
          <%= image_tag thumb_url, class: "thumb", data: { full: full_url }, alt: "#{@product.name} - imagine #{@product.external_image_urls.index(url).to_i + 2}" %>
        <% end %>
      </div>
    <% end %>

    <!-- Column 2: Main Image -->
    <div class="product-image">
      <% if @product.external_image_url.present? %>
        <% display_url = "#{@product.external_image_url}?width=600&height=600&quality=85" %>
        <% main_full_url = "#{@product.external_image_url}?width=2000&height=2000&quality=95" %>
        <div class="image-container">
          <%= image_tag display_url, alt: @product.name, class: "main-image popup-trigger", data: { full: main_full_url } %>
        </div>
      <% else %>
        <%= image_tag "placeholder.png", alt: "Fără imagine", class: "main-image popup-trigger" %>
      <% end %>
    </div>

    <!-- Column 3: Product Details -->
    <div class="product-details">
      <% if @product.custom_attributes && @product.custom_attributes["autor"] %>
        <p class="product-author"><strong>Autor:</strong> <%= @product.custom_attributes["autor"] %></p>
      <% end %>
      <p class="product-categories">
        <strong>Categorii:</strong>
        <% if @product.categories.present? %>
          <% @product.categories.each_with_index do |category, index| %>
            <%= link_to category.name, carti_index_path(category: category.slug), class: "category-link" %><%= ", " unless index == @product.categories.size - 1 %>
          <% end %>
        <% end %>
      </p>

      <div class="product-description">
        <strong>Descriere:</strong>
        <%= simple_format(sanitize(@product.description)) %>
      </div>
      <div class="badges">
        <span class="badge">
          <svg class="icon" xmlns="http://www.w3.org/2000/svg" fill="#8b0000" viewBox="0 0 24 24" width="16" height="16">
            <path d="M3 3h13v13H3V3zm15 6h3l3 4v3h-6V9zM6 18a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm12 0a2 2 0 1 0 .001 3.999A2 2 0 0 0 18 18z"/>
          </svg>
          Livrare rapidă
        </span>
        <span class="badge">
          <svg class="icon" xmlns="http://www.w3.org/2000/svg" fill="#8b0000" viewBox="0 0 24 24" width="16" height="16">
            <path d="M9 16.17l-3.88-3.88-1.41 1.41L9 19 20.29 7.71 18.88 6.29z"/>
          </svg>
          În stoc
        </span>
      </div>
    </div>

    <!-- Column 4: Price and Cart Actions -->
    <div class="product-actions">
      <% has_variants = @active_variants.present? && @active_variants.any? %>
      <p class="product-price" id="product-price">
        <strong>Pret:</strong>
        <% if has_variants %>
          <span id="variant-price"><%= number_to_currency(@active_variants.first.price, unit: "lei", format: "%n %u") %></span>
        <% else %>
          <%= number_to_currency(@product.price, unit: "lei", format: "%n %u") %>
        <% end %>
      </p>

      <% if has_variants %>
        <p class="product-stock-info" id="variant-stock-info" style="margin-top: 8px; font-size: 14px; color: #666;">
          <strong>Stoc:</strong> <span id="variant-stock-text">Selectează opțiunile</span>
        </p>
      <% end %>

      <% if has_variants %>
        <div class="variant-selector" id="variant-selector">
          <% @product_option_types.each do |ot| %>
            <div class="variant-option-group">
              <label class="variant-option-group-label"><%= ot.name %>:</label>
              <select class="variant-option-dropdown" data-option-type-id="<%= ot.id %>">
                <option value="">-- Alege <%= ot.name.downcase %> --</option>
                <% ot.option_values.select { |ov| @active_variants.any? { |v| v.option_value_ids.include?(ov.id) } }.each do |ov| %>
                  <option value="<%= ov.id %>"><%= ov.display_name %></option>
                <% end %>
              </select>
            </div>
          <% end %>
        </div>

        <script type="application/json" id="variants-data">
          <%= @active_variants.map { |v| { id: v.id, price: v.price.to_f, stock: v.stock, option_value_ids: v.option_value_ids, options_text: v.options_text, external_image_url: v.external_image_url, external_image_urls: v.external_image_urls || [] } }.to_json.html_safe %>
        </script>
      <% end %>

      <%= form_with url: "/cart/add", method: :post, local: true, class: "add-to-cart-form" do |f| %>
        <%= f.hidden_field :product_id, value: @product.id %>
        <% if has_variants %>
          <%= f.hidden_field :variant_id, value: '', id: 'selected-variant-id' %>
        <% end %>
        <div class="quantity-wrapper">
          <label for="quantity_input" class="quantity-label">Cantitate:</label>
          <div class="quantity-controls">
            <button type="button" class="quantity-btn quantity-decrease">-</button>
            <%= f.number_field :quantity, value: 1, min: 1, class: "quantity-input", id: "quantity_input" %>
            <button type="button" class="quantity-btn quantity-increase">+</button>
          </div>
        </div>
        <%= f.submit "Adauga in cos", class: "btn btn-primary add-to-cart-btn", id: "add-to-cart-submit" %>
      <% end %>
      <% if @cart_has_items %>
        <%= link_to "Finalizeaza comanda", new_order_path, class: "btn btn-checkout" %>
      <% end %>
      <%= link_to "Continua cumparaturile", carti_index_path, class: "btn btn-secondary continue-shopping-btn" %>
    </div>
  </div>

  <div id="lightbox-overlay">
    <span id="lightbox-close">×</span>
    <img id="lightbox-image" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" alt="Imagine mărită">
  </div>
</div>

<% if @similar_products.present? %>
<div class="container_content similar-products-section">
  <div class="section-title">
    <h2>Produse similare</h2>
    <div class="separator"></div>
  </div>

  <div class="similar-products-grid">
    <% @similar_products.each do |product| %>
      <div class="similar-product-card">
        <%= link_to carti_path(product), class: "similar-product-link" do %>
          <div class="similar-product-image">
            <% if product.external_image_url.present? %>
              <%= image_tag "#{product.external_image_url}?width=200&height=200&quality=80", alt: product.name, loading: "lazy" %>
            <% else %>
              <%= image_tag "placeholder.png", alt: "Fără imagine" %>
            <% end %>
          </div>
          <div class="similar-product-info">
            <p class="similar-product-name"><%= truncate(product.name, length: 50) %></p>
            <p class="similar-product-price"><%= number_to_currency(product.price, unit: "lei", format: "%n %u") %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<% end %>

<script>
document.addEventListener('turbo:load', initializeBindings);
document.addEventListener('DOMContentLoaded', initializeBindings);

function initializeBindings() {
  bindLightbox();
  bindQuantityControls();
  bindThumbnailClick();
  console.log('Initialize bindings executed');
}

function bindLightbox() {
  const overlay = document.getElementById('lightbox-overlay');
  const lightboxImage = document.getElementById('lightbox-image');
  const closeBtn = document.getElementById('lightbox-close');

  if (!overlay || !lightboxImage || !closeBtn) {
    console.warn('Lightbox elements not fully found, skipping binding');
    return;
  }

  const newOverlay = overlay.cloneNode(true);
  overlay.parentNode.replaceChild(newOverlay, overlay);
  const newCloseBtn = newOverlay.querySelector('#lightbox-close');
  const newLightboxImage = newOverlay.querySelector('#lightbox-image');

  // Lightbox pe click la imaginea principală
  document.addEventListener('click', (e) => {
    if (e.target.classList.contains('main-image')) {
      const fullUrl = e.target.dataset.full || e.target.src;
      newLightboxImage.src = fullUrl;
      newOverlay.style.display = 'flex';
      console.log('Lightbox opened with:', fullUrl);
    }
  });

  function closeLightbox() {
    newOverlay.style.display = 'none';
    newLightboxImage.src = '';
  }

  newCloseBtn.addEventListener('click', closeLightbox);
  newOverlay.addEventListener('click', e => {
    if (e.target === newOverlay || e.target === newCloseBtn) {
      closeLightbox();
    }
  });
}

function bindThumbnailClick() {
  const mainImage = document.querySelector('.main-image');
  const imageContainer = document.querySelector('.image-container');
  const thumbs = document.querySelectorAll('.thumb');
  
  if (!mainImage) {
    console.error('Main image not found');
    return;
  }
  if (!thumbs || thumbs.length === 0) {
    console.warn('No thumbnails found');
    return;
  }

  console.log(`Found ${thumbs.length} thumbnails (including main image)`);

  // Marchează primul thumbnail (imaginea principală) ca activ
  if (thumbs.length > 0) {
    thumbs[0].classList.add('active');
  }

  // ZOOM cu urmărire mouse
  if (imageContainer) {
    imageContainer.addEventListener('mousemove', (e) => {
      const rect = imageContainer.getBoundingClientRect();
      const x = ((e.clientX - rect.left) / rect.width) * 100;
      const y = ((e.clientY - rect.top) / rect.height) * 100;
      
      mainImage.style.transformOrigin = `${x}% ${y}%`;
    });

    imageContainer.addEventListener('mouseleave', () => {
      mainImage.style.transformOrigin = 'center center';
    });
  }

  thumbs.forEach((thumb, index) => {
    // CLICK pentru a schimba imaginea permanent
    thumb.addEventListener('click', (e) => {
      e.preventDefault();
      const fullResUrl = thumb.dataset.full;
      
      console.log(`[Thumb ${index}] CLICKED - Switching to:`, fullResUrl);
      
      if (fullResUrl) {
        // Îndepărtăm clasa active de la toate thumbnailurile
        thumbs.forEach(t => t.classList.remove('active'));
        // Adăugăm clasa active la thumbnailul curent
        thumb.classList.add('active');
        
        // Schimbăm imaginea principală
        mainImage.style.opacity = '0.5';
        
        const newImage = new Image();
        newImage.onload = () => {
          mainImage.src = fullResUrl;
          mainImage.dataset.full = fullResUrl;
          mainImage.style.opacity = '1';
          console.log(`[Thumb ${index}] ✓ Image switched successfully`);
        };
        newImage.onerror = () => {
          console.error(`[Thumb ${index}] ✗ Failed to load image:`, fullResUrl);
          mainImage.style.opacity = '1';
        };
        newImage.src = fullResUrl;
      }
    });
  });
}

function bindQuantityControls() {
  const input = document.getElementById('quantity_input');
  const decreaseBtn = document.querySelector('.quantity-decrease');
  const increaseBtn = document.querySelector('.quantity-increase');

  if (!input || !decreaseBtn || !increaseBtn) {
    console.warn('Quantity controls not found');
    return;
  }

  function adjustQty(delta) {
    let value = parseInt(input.value, 10) || 1;
    value = Math.max(1, value + delta);
    input.value = value;
  }

  decreaseBtn.addEventListener('click', () => adjustQty(-1));
  increaseBtn.addEventListener('click', () => adjustQty(1));
}

// Variant selector logic
function bindVariantSelector() {
  const dataEl = document.getElementById('variants-data');
  if (!dataEl) return; // No variants

  const variants = JSON.parse(dataEl.textContent);
  const dropdowns = document.querySelectorAll('.variant-option-dropdown');
  const priceEl = document.getElementById('variant-price');
  const hiddenInput = document.getElementById('selected-variant-id');
  const submitBtn = document.getElementById('add-to-cart-submit');

  if (!dropdowns.length) return;

  function findMatchingVariant() {
    const selected = {};
    dropdowns.forEach(function(dd) {
      const val = dd.value;
      if (val) selected[dd.dataset.optionTypeId] = parseInt(val);
    });

    const selectedIds = Object.values(selected);
    if (selectedIds.length === 0) return null;

    return variants.find(function(v) {
      return selectedIds.every(function(id) { return v.option_value_ids.includes(id); }) &&
             v.option_value_ids.length === selectedIds.length;
    });
  }

  function updateVariantImages(variant) {
    const mainImage = document.querySelector('.main-image');
    const thumbnailsContainer = document.querySelector('.product-thumbnails');

    if (!mainImage) return;

    // Determine images to display (variant images or fallback to product images)
    const mainImgUrl = variant.external_image_url;
    const galleryUrls = variant.external_image_urls || [];

    if (mainImgUrl) {
      // Update main image
      const displayUrl = mainImgUrl + '?width=600&height=600&quality=85';
      const fullUrl = mainImgUrl + '?width=2000&height=2000&quality=95';

      mainImage.style.opacity = '0.5';
      const newImage = new Image();
      newImage.onload = function() {
        mainImage.src = displayUrl;
        mainImage.dataset.full = fullUrl;
        mainImage.style.opacity = '1';
      };
      newImage.src = displayUrl;

      // Update thumbnails if container exists
      if (thumbnailsContainer) {
        thumbnailsContainer.innerHTML = '';

        // Add main image thumbnail
        const mainThumb = document.createElement('img');
        mainThumb.className = 'thumb main-thumb active';
        mainThumb.src = mainImgUrl + '?width=600&height=600&quality=95';
        mainThumb.dataset.full = fullUrl;
        mainThumb.alt = 'Imagine principală';
        thumbnailsContainer.appendChild(mainThumb);

        // Add gallery thumbnails
        galleryUrls.forEach(function(url, index) {
          const thumb = document.createElement('img');
          thumb.className = 'thumb';
          thumb.src = url + '?width=600&height=600&quality=95';
          thumb.dataset.full = url + '?width=2000&height=2000&quality=95';
          thumb.alt = 'Imagine ' + (index + 2);
          thumbnailsContainer.appendChild(thumb);
        });

        // Re-bind thumbnail clicks
        bindThumbnailClick();
      }
    }
  }

  function updateSelection() {
    const match = findMatchingVariant();
    const stockTextEl = document.getElementById('variant-stock-text');

    if (match) {
      hiddenInput.value = match.id;
      priceEl.textContent = match.price.toFixed(2) + ' lei';
      submitBtn.disabled = false;
      submitBtn.title = '';

      // Update stock info
      if (stockTextEl) {
        if (match.stock > 0) {
          stockTextEl.textContent = match.stock + ' bucăți disponibile';
          stockTextEl.style.color = '#28a745';
        } else {
          stockTextEl.textContent = 'Stoc epuizat';
          stockTextEl.style.color = '#dc3545';
          submitBtn.disabled = true;
          submitBtn.title = 'Produsul nu este în stoc';
        }
      }

      // Update images if variant has images
      if (match.external_image_url || (match.external_image_urls && match.external_image_urls.length > 0)) {
        updateVariantImages(match);
      }
    } else {
      hiddenInput.value = '';
      if (submitBtn) {
        submitBtn.disabled = dropdowns.length > 0;
        submitBtn.title = dropdowns.length > 0 ? 'Selecteaza toate optiunile' : '';
      }
      if (stockTextEl) {
        stockTextEl.textContent = 'Selectează opțiunile';
        stockTextEl.style.color = '#666';
      }
    }
  }

  dropdowns.forEach(function(dd) {
    dd.addEventListener('change', updateSelection);
  });

  // Initial state: disable submit if variants exist but none selected
  updateSelection();
}

document.addEventListener('DOMContentLoaded', bindVariantSelector);
document.addEventListener('turbo:load', bindVariantSelector);
</script>
