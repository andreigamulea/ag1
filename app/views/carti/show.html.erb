<div class="container_content product-view">
  <div class="section-title">
    <h1><%= @product.name %></h1>
    <div class="separator"></div>
  </div>



  <%# Determine initial variant for image display %>
  <% initial_variant = nil %>
  <% if @active_variants.present? && @active_variants.any? %>
    <% if params[:variant].present? %>
      <% initial_variant = @active_variants.find { |v| v.id == params[:variant].to_i } %>
    <% end %>
    <% initial_variant ||= @active_variants.first %>
  <% end %>

  <%# Resolve images: use variant images if available, fallback to product images %>
  <% if initial_variant %>
    <% display_main_url = initial_variant.external_image_url.presence || @product.external_image_url %>
    <% display_gallery_urls = (initial_variant.external_image_urls.presence if initial_variant.respond_to?(:external_image_urls)) || @product.external_image_urls || [] %>
  <% else %>
    <% display_main_url = @product.external_image_url %>
    <% display_gallery_urls = @product.external_image_urls || [] %>
  <% end %>

  <div class="product-grid <%= 'no-thumbnails' unless display_gallery_urls.present? && display_gallery_urls.any? %>">
    <!-- Column 1: Thumbnails (includem și imaginea principală) -->
    <% if display_gallery_urls.present? && display_gallery_urls.any? %>
      <div class="product-thumbnails">
        <% if display_main_url.present? %>
          <% main_thumb_url = "#{display_main_url}?width=600&height=600&quality=95" %>
          <% main_full_url = "#{display_main_url}?width=2000&height=2000&quality=95" %>
          <%= image_tag main_thumb_url, class: "thumb main-thumb", data: { full: main_full_url }, alt: @product.name %>
        <% end %>

        <% display_gallery_urls.each_with_index do |url, idx| %>
          <% thumb_url = "#{url}?width=600&height=600&quality=95" %>
          <% full_url  = "#{url}?width=2000&height=2000&quality=95" %>
          <%= image_tag thumb_url, class: "thumb", data: { full: full_url }, alt: "#{@product.name} - imagine #{idx + 2}" %>
        <% end %>
      </div>
    <% end %>

    <!-- Column 2: Main Image -->
    <div class="product-image">
      <% if display_main_url.present? %>
        <% display_url = "#{display_main_url}?width=600&height=600&quality=85" %>
        <% main_full_url = "#{display_main_url}?width=2000&height=2000&quality=95" %>
        <div class="image-container">
          <%= image_tag display_url, alt: @product.name, class: "main-image popup-trigger", data: { full: main_full_url } %>
        </div>
      <% else %>
        <%= image_tag "placeholder.png", alt: "Fără imagine", class: "main-image popup-trigger" %>
      <% end %>
    </div>

    <!-- Column 3: Product Details -->
