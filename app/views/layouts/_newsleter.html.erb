<style>
/* ===================================
   NEWSLETTER SECTION - FULL WIDTH
   =================================== */

.news {
    width: 100%;
    background: #e8f4f8;
    padding: 35px 20px;
    margin-top: 40px;
    margin-bottom: 10px;
}

.newsletter-container {
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 30px;
}

.newsletter-prompt {
    flex-shrink: 0;
}

.newsletter-prompt p {
    font-size: 18px;
    color: #333;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
    text-align: right;
    max-width: 420px;
}

.newsletter-form {
    display: flex;
    align-items: center;
    gap: 12px;
    flex: 1;
    max-width: 700px;
}

.form-inputs {
    display: flex;
    gap: 12px;
    flex: 1;
}

.form-inputs input {
    flex: 1;
    min-width: 200px;
    padding: 10px 18px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 15px;
    font-family: 'Lora', serif;
    transition: all 0.2s ease;
    background: white;
}

.form-inputs input:focus {
    outline: none;
    border-color: #8b0000;
}

.form-inputs input::placeholder {
    color: #999;
}

.form-action {
    flex-shrink: 0;
}

.form-action button {
    background: #8b0000;
    color: white;
    padding: 10px 35px;
    border: none;
    border-radius: 6px;
    font-size: 15px;
    font-weight: bold;
    font-family: 'Lora', serif;
    cursor: pointer;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    white-space: nowrap;
}

.form-action button:hover {
    background: #6d0000;
}

#thank-you-message {
    text-align: center;
    font-size: 1rem;
    color: #333;
    margin: 0;
    padding: 20px;
    background: #d4edda;
    border-left: 4px solid #28a745;
}

#thank-you-message p {
    margin: 0;
    max-width: 1280px;
    margin: 0 auto;
    font-size: 16px;
    font-weight: 600;
}

/* ===================================
   RESPONSIVE DESIGN
   =================================== */

@media (max-width: 1024px) {
    .newsletter-container {
        flex-direction: column;
        gap: 25px;
    }

    .newsletter-prompt p {
        text-align: center;
        max-width: 100%;
    }

    .newsletter-form {
        width: 100%;
        max-width: 100%;
    }
}

@media (max-width: 768px) {
    .news {
        padding: 30px 15px;
    }

    .newsletter-prompt p {
        font-size: 18px;
    }

    .form-inputs {
        flex-direction: column;
        width: 100%;
    }

    .form-inputs input {
        min-width: 100%;
    }

    .newsletter-form {
        flex-direction: column;
        gap: 12px;
    }

    .form-action {
        width: 100%;
    }

    .form-action button {
        width: 100%;
    }
}

@media (max-width: 480px) {
    .newsletter-prompt p {
        font-size: 16px;
    }

    .form-inputs input {
        padding: 12px 16px;
        font-size: 14px;
    }

    .form-action button {
        font-size: 14px;
        padding: 12px 28px;
    }
}

/* Accessibility */
.form-inputs input:focus-visible {
    outline: 1px solid #8b0000;
    outline-offset: 1px;
}

.form-action button:focus-visible {
    outline: 1px solid #8b0000;
    outline-offset: 1px;
}
</style>

<div class="news">
    <div class="newsletter-container">
        <div class="newsletter-prompt">
            <p>Abonează-te la newsletter-ul nostru pentru a primi ultimele noutăți și informații!</p>
        </div>
        <form id="newsletter-form" class="newsletter-form">
            <div class="form-inputs">
                <input type="text" id="name" name="name" placeholder="Numele tău">
                <input type="email" id="email" name="email" placeholder="Adresa ta de email" required>
            </div>
            <div class="form-action">
                <button type="submit">Trimite</button>
            </div>
        </form>
    </div>
</div>

<script>
document.addEventListener("turbo:load", function() {
    var form = document.getElementById('newsletter-form');
    if (!form) return;
    
    form.onsubmit = function(e) {
        e.preventDefault();
        var submitButton = form.querySelector('button[type="submit"]');
        var originalButtonText = submitButton.textContent;
        submitButton.disabled = true;
        submitButton.textContent = 'Se trimite...';

        var jsonToSend = {
            newsletter: {
                nume: document.getElementById('name').value,
                email: document.getElementById('email').value,
                validat: true
            }
        };

        fetch('/newsletter', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
            },
            body: JSON.stringify(jsonToSend),
        })
        .then(response => {
            if (response.ok) {
                return response.json();
            } else {
                throw new Error('A apărut o problemă la trimiterea formularului.');
            }
        })
        .then(data => {
            if (!document.getElementById('thank-you-message')) {
                var thankYouMessage = document.createElement('div');
                thankYouMessage.id = 'thank-you-message';
                thankYouMessage.innerHTML = '<p>Mulțumim pentru înscriere! Te-ai abonat cu succes!</p>';
                var newsElement = document.querySelector('.news');
                newsElement.insertAdjacentElement('afterend', thankYouMessage);
                form.reset();
            }
            submitButton.disabled = false;
            submitButton.textContent = originalButtonText;
        })
        .catch(error => {
            console.error('Eroare:', error);
            alert('A apărut o eroare la trimiterea formularului. Te rugăm să încerci din nou.');
            submitButton.disabled = false;
            submitButton.textContent = originalButtonText;
        });
    };
});
</script>