<div id="login-page" class="container_content">
  <h1>
    Autentificare
  </h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-style" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input-style" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="remember">
        <%= f.check_box :remember_me %>
        <%= f.label "Autentificare automată" %>
      </div>
    <% end %>

    <div class="actions" style="margin-top: 20px;">
      <%= f.submit "Intră în cont", class: "link-button" %>
    </div>
  <% end %>

  <div class="devise-links special" >
    <%= render "devise/shared/links" %>
  </div>
</div>


<style>
/* ----------- PAGINA LOGIN STILIZATĂ CONSISTENT ----------- */

#login-page {
  max-width: 480px;
  margin: 40px auto;
  padding: 30px 25px;
  background: white;
  border: 1px solid #8b0000;
  border-radius: 10px;
  box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
  animation: fadeIn 0.8s ease-out forwards;
}

/* TITLU LOGIN */
#login-page h1 {
  all: unset;
  font-size: 2rem;
  color: #8b0000 !important;
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
  font-weight: bold;
  display:block;
  text-align:center;
  width:100%;
}

/* CÂMPURI FORMULAR */
#login-page .field {
  margin-bottom: 1.5rem;
}

#login-page label {
  display: block;
  font-size: 1.1rem;
  font-weight: 600;
  color: #8b0000;
  margin-bottom: -20px;
}

/* INPUTURI */
#login-page input[type="email"],
#login-page input[type="password"] {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #8b0000;
  border-radius: 6px;
  font-size: 1rem;
  color: #333;
  background-color: #fff8f8;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

#login-page input[type="email"]:focus,
#login-page input[type="password"]:focus {
  border-color: #650101;
  outline: none;
  box-shadow: 0 0 0 2px rgba(101, 1, 1, 0.3);

}

/* REMEMBER ME */
#login-page .field input[type="checkbox"] {
  margin-right: 0.5rem!important;
  vertical-align: middle;
  }
#login-page .remember {
    display: flex;
    align-items: baseline;
    flex-direction: row;
}
#user_remember_me{
margin-right:0.5rem;
}

/* BUTON LOGIN */
#login-page .actions input[type="submit"] {
  background: none;
  border: none;
  width: 100%;
  padding: 12px;
  font: inherit;
  font-size: 1.2rem;
  font-weight: 600;
  color: #8b0000 !important;
  text-transform: uppercase;
  cursor: pointer;
  position: relative;
  text-align: center;
  transition: color 0.3s ease;
  text-decoration:underline;
}

#login-page .actions input[type="submit"]::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -2px;
  width: 100%;
  height: 1px;
  background-color: #fbc02d;
  opacity: 0;
  transition: opacity 0.2s ease-in-out;
}

#login-page .actions input[type="submit"]:hover {
  color: #fbc02d !important;
}

#login-page .actions input[type="submit"]:hover::after {
  opacity: 1;
}

/* LINKURI DEVIZE */
#login-page .devise-links {
  margin-top: 1.5rem;
  text-align: center;
  font-size: 1.1rem;
  color: #666666;
      display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

#login-page .devise-links a {
  color: #8b0000;
  font-weight: bold;
  text-decoration: none;
  position: relative;
  transition: color 0.3s ease;
}

#login-page .devise-links a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -2px;
  width: 100%;
  height: 1px;
  background-color: #fbc02d;
  opacity: 0;
  transition: opacity 0.2s ease-in-out;
}

#login-page .devise-links a:hover {
  color: #fbc02d;
}

#login-page .devise-links a:hover::after {
  opacity: 1;
}
#login-page .devise-links br{
display:none;
}

/* RESPONSIVE */
@media (max-width:922px) {
.special{
    flex-direction:column!important;
    }
#login-page .special a:first-of-type {
  border-bottom: 1px solid #dddddd;
  width: 61.8%;
  margin: 0 auto;
  margin-bottom: 10px;
  padding-bottom: 10px;
  display: block; /* asigură afișare pe linie separată */
}
}


@media (max-width: 500px) {
  #login-page {
    margin: 20px;
    padding: 20px;
  }

  #login-page h1 {
    font-size: 2rem;
  }
}

/* ANIMAȚIE */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }


}


</style>