<%= render 'shared/noindex' %>
<div class="container_content">
  <div class="section-title">
    <h1>EditeazÄƒ Contul</h1>
  </div>
  <div class="separator"></div>

  <div class="edit-account-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-field">
        <%= f.label :email, "Adresa de email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="form-info">
          In asteptarea confirmarii pentru: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="form-field">
        <%= f.label :password, "Parola noua" %>
        <span class="form-hint">(lasa gol daca nu vrei sa o modifici)</span>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <span class="form-hint">
            Minim <%= @minimum_password_length %> caractere
          </span>
        <% end %>
      </div>

      <div class="form-field">
        <%= f.label :password_confirmation, "Confirma parola noua" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="form-field">
        <%= f.label :current_password, "Parola curenta" %>
        <span class="form-hint">(necesara pentru confirmarea modificarilor)</span>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="form-actions">
        <%= link_to "Inapoi", :back, class: "btn-back" %>
        <%= f.submit "Actualizeaza", class: "btn-update" %>
      </div>
    <% end %>

    <div class="cancel-account-section">
      <h3 class="cancel-account-title">Dezactiveaza contul</h3>

      <div class="cancel-account-warning">
        <p><strong>Atentie!</strong> Contul tau va deveni inactiv si nu vei mai putea sa te autentifici. Poti reactiva contul oricand contactand echipa de suport.</p>
      </div>

      <%= form_with url: deactivate_user_registration_path, method: :patch, local: true, scope: :user do |f| %>
        <div class="form-field">
          <%= f.label :current_password, "Confirma parola curenta pentru a dezactiva contul" %>
          <%= f.password_field :current_password,
              autocomplete: "current-password",
              required: true %>
        </div>

        <%= f.submit "Dezactiveaza contul meu",
            data: {
              confirm: "Esti sigur ca vrei sa dezactivezi contul? Vei putea sa-l reactivezi contactand echipa de suport.",
              turbo_confirm: "Esti sigur ca vrei sa dezactivezi contul?"
            },
            class: "btn-cancel-account" %>
      <% end %>
    </div>
  </div>
</div>
