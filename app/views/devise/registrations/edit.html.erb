<style>
.edit-account-container {
  max-width: 600px;
  margin: 40px auto;
  padding: 0 20px;
}

.edit-account-card {
  background: white;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  padding: 40px;
}

.edit-account-title {
  color: #8b0000;
  font-size: 28px;
  font-weight: 700;
  margin: 0 0 30px 0;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.form-field {
  margin-bottom: 25px;
}

.form-field label {
  display: block;
  font-weight: 600;
  margin-bottom: 8px;
  color: #333;
  font-size: 15px;
}

.form-field input[type="email"],
.form-field input[type="password"] {
  width: 100%;
  padding: 12px 15px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 15px;
  font-family: 'Lora', serif;
  transition: border-color 0.2s;
  box-sizing: border-box;
}

.form-field input:focus {
  outline: none;
  border-color: #8b0000;
}

.form-hint {
  font-size: 13px;
  color: #666;
  font-style: italic;
  margin-top: 5px;
  display: block;
}

.form-info {
  background: #e8f4f8;
  padding: 10px 15px;
  border-radius: 6px;
  font-size: 13px;
  color: #0c5460;
  margin-top: 10px;
}

.form-actions {
  margin-top: 30px;
  display: flex;
  gap: 10px;
  justify-content: space-between;
  align-items: center;
}

.btn-update {
  background: #8b0000;
  color: white;
  padding: 12px 30px;
  border: none;
  border-radius: 6px;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.btn-update:hover {
  background: #6d0000;
}

.btn-back {
  color: #6c757d;
  text-decoration: none;
  padding: 12px 20px;
  border-radius: 6px;
  transition: background 0.2s;
}

.btn-back:hover {
  background: #f8f9fa;
}

.cancel-account-section {
  margin-top: 50px;
  padding-top: 30px;
  border-top: 2px solid #e9ecef;
}

.cancel-account-title {
  color: #dc3545;
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 15px;
}

.cancel-account-warning {
  background: #fff3cd;
  border-left: 4px solid #ffc107;
  padding: 15px;
  margin-bottom: 20px;
  border-radius: 4px;
}

.cancel-account-warning p {
  margin: 0;
  color: #856404;
  font-size: 14px;
}

.btn-cancel-account {
  background: #dc3545;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s;
}

.btn-cancel-account:hover {
  background: #c82333;
}

/* Responsive */
@media (max-width: 768px) {
  .edit-account-card {
    padding: 30px 20px;
  }

  .form-actions {
    flex-direction: column;
    gap: 15px;
  }

  .btn-update,
  .btn-back {
    width: 100%;
    text-align: center;
  }
}
</style>

