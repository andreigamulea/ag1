<%= render 'shared/noindex' %>
<div class="checkout-wrapper">
  <!-- Secțiune 1: Rezumat comandă -->
  <div class="checkout-section">
    <div class="cart-summary">
      <%= render 'cart_summary' %>
    </div>
  </div>

  <!-- Secțiune 2: Formular comandă -->
  <div class="checkout-section">
    <h2>Date de facturare și livrare</h2>
    <div class="checkout-form">
      <%= render 'form' %>
    </div>
  </div>
</div>

<script>
  document.addEventListener("turbo:load", () => {
    const checkbox = document.getElementById("toggle-shipping");
    const shippingFields = document.getElementById("shipping-fields");

    if (checkbox && shippingFields) {
      checkbox.addEventListener("change", () => {
        shippingFields.style.display = checkbox.checked ? "block" : "none";
      });
    }
  });
</script>
