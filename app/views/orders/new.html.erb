<style>
/* ===================================
   CHECKOUT PAGE STYLES
   =================================== */

.checkout-wrapper {
    max-width: 1280px;
    margin: 20px auto;
    padding: 25px;
    background: white;
    box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}

.checkout-section {
    margin-bottom: 30px;
}

.checkout-section h2 {
    font-size: 24px;
    font-weight: bold;
    color: #8b0000;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid #8b0000;
}

/* ===================================
   CART SUMMARY STYLES
   =================================== */

.cart-summary {
    background: #fff5f5;
    padding: 20px;
    border-radius: 8px;
    border-left: 4px solid #8b0000;
    margin-bottom: 30px;
}

.cart-summary h2 {
    color: #8b0000;
    font-size: 24px;
    margin-bottom: 15px;
    border-bottom: 1px solid #8b0000;
    padding-bottom: 8px;
}

.cart-summary table {
    width: 100%;
    border-collapse: collapse;
    margin: 15px 0;
    font-size: 14px;
}

.cart-summary table th {
    background: #8b0000;
    color: white;
    padding: 10px;
    text-align: left;
    font-weight: bold;
}

.cart-summary table td {
    padding: 10px;
    border-bottom: 1px solid #ddd;
}

.cart-summary table tbody tr:hover {
    background: #fbc02d;
    color: #8b0000;
    transition: 0.3s ease-in-out;
}

.cart-summary p {
    margin: 10px 0;
    font-size: 15px;
}

.cart-summary p strong {
    color: #8b0000;
}

.cart-summary .discount-info {
    color: green;
    font-weight: bold;
}

.cart-summary .total-price {
    font-size: 18px;
    font-weight: bold;
    color: #8b0000;
    margin-top: 15px;
    padding-top: 15px;
    border-top: 2px solid #8b0000;
}

/* ===================================
   FORM STYLES
   =================================== */

.checkout-form {
    background: white;
}

.checkout-form fieldset {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 20px;
    margin-bottom: 20px;
    background: #fdfaf5;
}

.checkout-form legend {
    color: #8b0000;
    font-size: 18px;
    font-weight: bold;
    padding: 0 10px;
}

.checkout-form label {
    display: block;
    margin-bottom: 8px;
    color: #333;
    font-weight: 600;
    font-size: 14px;
}

.checkout-form input[type="text"],
.checkout-form input[type="email"],
.checkout-form input[type="tel"],
.checkout-form textarea,
.checkout-form .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
    font-family: 'Lora', serif;
    transition: border-color 0.3s ease;
    box-sizing: border-box;
}

.checkout-form input:focus,
.checkout-form textarea:focus {
    outline: none;
    border-color: #8b0000;
    box-shadow: 0 0 5px rgba(139, 0, 0, 0.2);
}

.checkout-form input:disabled {
    background-color: #f5f5f5;
    cursor: not-allowed;
}

.checkout-form textarea {
    resize: vertical;
    min-height: 80px;
}

/* Row & Column Layout */
.row {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    margin-bottom: 20px;
}

.col {
    flex: 1 1 calc(50% - 7.5px);
    min-width: 0;
}

.col label {
    margin-bottom: 8px;
}

.mb-3 {
    margin-bottom: 20px;
}

.position-relative {
    position: relative;
}

/* ===================================
   DROPDOWN AUTOCOMPLETE
   =================================== */

.dropdown-menu {
    border: 1px solid #8b0000;
    background-color: white;
    max-height: 200px;
    overflow-y: auto;
    position: absolute;
    z-index: 1000;
    width: 100%;
    border-radius: 5px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    margin-top: 2px;
}

.dropdown-item {
    padding: 10px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.2s ease;
}

.dropdown-item:hover {
    background-color: #fbc02d;
    color: #8b0000;
    font-weight: bold;
}

/* ===================================
   CHECKBOX STYLES
   =================================== */

.field {
    display: flex;
    align-items: center;
    gap: 10px;
    margin: 20px 0;
}

.field input[type="checkbox"] {
    width: 20px;
    height: 20px;
    cursor: pointer;
    accent-color: #8b0000;
}

.field label {
    font-size: 15px;
    font-weight: 600;
    color: #333;
    cursor: pointer;
}

/* ===================================
   ALERT STYLES
   =================================== */

.alert {
    padding: 15px;
    border-radius: 5px;
    margin-bottom: 20px;
}

.alert-danger {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
    color: #721c24;
}

.alert h4 {
    margin: 0 0 10px 0;
    font-size: 16px;
}

.alert ul {
    margin: 10px 0 0 20px;
    padding: 0;
}

.alert li {
    margin-bottom: 5px;
}

/* ===================================
   SUBMIT BUTTON
   =================================== */

.btn {
    padding: 12px 30px;
    font-size: 16px;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: 'Lora', serif;
    text-transform: uppercase;
}

.btn-primary {
    background-color: #8b0000;
    color: white;
}

.btn-primary:hover {
    background-color: #5e085f;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 0, 0, 0.3);
}

/* ===================================
   SEPARATOR
   =================================== */

hr {
    border: none;
    height: 1px;
    background-color: #8b0000;
    margin: 30px 0;
    opacity: 0.3;
}

/* ===================================
   RESPONSIVE DESIGN
   =================================== */

@media (max-width: 768px) {
    .checkout-wrapper {
        padding: 15px;
        margin: 10px;
    }

    .row {
        flex-direction: column;
        gap: 15px;
    }

    .col {
        min-width: 100%;
    }

    .checkout-section h2 {
        font-size: 20px;
    }

    .cart-summary table {
        font-size: 12px;
    }

    .cart-summary table th,
    .cart-summary table td {
        padding: 8px 5px;
    }

    .checkout-form fieldset {
        padding: 15px;
    }

    .btn {
        width: 100%;
        padding: 15px;
    }
}

@media (max-width: 480px) {
    .checkout-wrapper {
        border-radius: 0;
        box-shadow: none;
        margin: 0;
    }

    .cart-summary {
        padding: 15px;
    }

    .checkout-section h2 {
        font-size: 18px;
    }
}

/* ===================================
   FORM VALIDATION FEEDBACK
   =================================== */

input:invalid:not(:placeholder-shown) {
    border-color: #dc3545;
}

input:valid:not(:placeholder-shown) {
    border-color: #28a745;
}

/* ===================================
   LOADING STATE (Optional)
   =================================== */

.btn-primary:disabled {
    background-color: #ccc;
    cursor: not-allowed;
}
</style>

<div class="checkout-wrapper">
  <!-- Secțiune 1: Rezumat comandă -->
  <div class="checkout-section">
    <div class="cart-summary">
      <%= render 'cart_summary' %>
    </div>
  </div>

  <!-- Secțiune 2: Formular comandă -->
  <div class="checkout-section">
    <h2>Date de facturare și livrare</h2>
    <div class="checkout-form">
      <%= render 'form' %>
    </div>
  </div>
</div>

<script>
  document.addEventListener("turbo:load", () => {
    const checkbox = document.getElementById("toggle-shipping");
    const shippingFields = document.getElementById("shipping-fields");

    if (checkbox && shippingFields) {
      checkbox.addEventListener("change", () => {
        shippingFields.style.display = checkbox.checked ? "block" : "none";
      });
    }
  });
</script>
