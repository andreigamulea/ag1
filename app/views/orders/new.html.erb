<div style="display: flex; flex-wrap: wrap; gap: 30px; align-items: flex-start; margin-top: 20px;">

  <!-- Stânga: Rezumat comandă -->
  <div style="flex: 1; min-width: 300px;">
    <%= render 'cart_summary' %>

  </div>

  <!-- Dreapta: Formular comandă -->
  <div style="flex: 1; min-width: 300px;">
    <h2>Date de facturare și livrare</h2>

    <%= render 'form' %>
  </div>

</div>

<script>
  document.addEventListener("turbo:load", () => {
    const checkbox = document.getElementById("toggle-shipping");
    const shippingFields = document.getElementById("shipping-fields");

    if (checkbox && shippingFields) {
      checkbox.addEventListener("change", () => {
        shippingFields.style.display = checkbox.checked ? "block" : "none";
      });
    }
  });
</script>
