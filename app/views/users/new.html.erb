<div class="container_content user-form">
<div style="max-width:680px; margin: 0 auto;">
  <h1 class="admin-title">➕ Adaugă utilizator</h1>

  <%= form_with(model: @user, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div class="form-errors">
        <h2><%= pluralize(@user.errors.count, "eroare") %>:</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :email, "Email" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, "Parolă" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "Confirmare parolă" %>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :role, "Rol" %>
      <%= form.select :role, [["Client", 0], ["Administrator", 1], ["Manager", 2]], {}, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Creează utilizator", class: "form-button" %>
    </div>
  <% end %>

  <%= link_to "← Înapoi", users_path, class: "link-button", style: "margin-top: 1rem; display: inline-block;" %>
</div>
</div>

<style>
.admin-title {
  font-size: 28px;
  color: #8b0000;
  text-align: center;
  margin-bottom: 20px;
  padding-top:20px;
}

.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  margin-bottom: 5px;
  font-weight: 600;
  color: #8b0000;
}

.form-control {
  width: 100%;
  padding: 10px;
  border: 1px solid #8b0000;
  border-radius: 6px;
  font-size: 1rem;
  background-color: #fff8f8;
}

.form-control:focus {
  border-color: #650101;
  outline: none;
  box-shadow: 0 0 0 2px rgba(101, 1, 1, 0.3);
}

.form-errors {
  background: #ffe5e5;
  border: 1px solid #bc2c2c;
  color: #8b0000;
  padding: 15px;
  border-radius: 6px;
  margin-bottom: 20px;
}

.form-errors h2 {
  margin-top: 0;
  font-size: 1.1rem;
}

.form-actions {
  margin-top: 20px;
}

.form-button {
  background-color: #8b0000;
  color: white;
  border: none;
  padding: 10px 22px;
  font-size: 1rem;
  font-weight: bold;
  border-radius: 6px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.form-button:hover {
  background-color: #fbc02d;
  color: #8b0000;
}

</style>