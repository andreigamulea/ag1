/* Header elegant */
.elegant-header {
  text-align: center;
  margin: 60px auto 50px;
  max-width: 900px;
  padding: 0 20px;
}

.refined-title {
  position: relative;
  display: inline-block;
  font-size: 1.75rem;
  font-weight: 500;
  color: #b51e1e;
  letter-spacing: 5px;
  line-height: 1.5;
  margin: 0;
  font-family: 'Playfair Display', 'Georgia', serif;
  text-shadow: 0 2px 4px rgba(181, 30, 30, 0.05);
}

.deco-left,
.deco-right {
  position: absolute;
  top: 50%;
  font-size: 1rem;
  color: #d4af37;
  opacity: 0.7;
  letter-spacing: 5px;
  transform: translateY(-50%);
}

.deco-left  { left: -70px; }
.deco-right { right: -70px; }

.subline {
  height: 1px;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(181, 30, 30, 0.3) 20%,
    #d4af37 50%,
    rgba(181, 30, 30, 0.3) 80%, 
    transparent);
  margin: 25px auto 0;
  max-width: 350px;
  position: relative;
}

.subline::before {
  content: "◆";
  position: absolute;
  top: -9px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 0.9rem;
  color: #b51e1e;
  background: #fff;
  padding: 0 10px;
}

@media (max-width: 768px) {
  .product-grid {
    gap: 15px;
    padding: 10px;
  }

  .product-card {
    max-width: 100%;
    padding: 12px;
    margin: 5px;
  }

  .elegant-header { margin: 40px auto 30px; }
  .refined-title { 
    font-size: 2.2rem; 
    letter-spacing: 3px; 
  }
  .deco-left  { left: -50px; font-size: 0.9rem; }
  .deco-right { right: -50px; font-size: 0.9rem; }
  .subline { max-width: 280px; margin: 20px auto 0; }
}

@media (max-width: 480px) {
  .refined-title { 
    font-size: 1.8rem; 
    letter-spacing: 2px; 
  }
  .deco-left, .deco-right { display: none; }
  .subline { max-width: 220px; }
}
</style>